<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<fx:root alignment="CENTER_LEFT" prefWidth="369.0" spacing="12.0" styleClass="box" stylesheets="@../../css/userlogin.css" type="VBox" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox fx:id="paneNotif" alignment="CENTER" />
      <Text stroke="#0a0a0a" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="label" text="Username">
         <font>
            <Font size="17.0" />
         </font>
      </Text>
      <TextField fx:id="txtUsername" prefHeight="35.0" prefWidth="291.0" styleClass="text-field">
         <font>
            <Font size="16.0" />
         </font>
      </TextField>
      <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="label" text="Password">
         <font>
            <Font size="17.0" />
         </font>
      </Text>
      <PasswordField fx:id="txtPassword" styleClass="text-field">
         <font>
            <Font size="16.0" />
         </font>
      </PasswordField>
      <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="label" text="Confirm Password">
         <font>
            <Font size="17.0" />
         </font>
      </Text>
      <PasswordField fx:id="txtConfirmPassword" styleClass="text-field">
         <font>
            <Font size="16.0" />
         </font>
      </PasswordField>
      <Button fx:id="btnSignUp" contentDisplay="TEXT_ONLY" mnemonicParsing="false" prefHeight="45.0" prefWidth="305.0" style="-fx-font-size: 16px;" styleClass="mybutton" text="Sign Up">
         <VBox.margin>
            <Insets top="15.0" />
         </VBox.margin>
         <font>
            <Font name="System Bold" size="16.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
   </children>
   <padding>
      <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
   </padding>
</fx:root>
