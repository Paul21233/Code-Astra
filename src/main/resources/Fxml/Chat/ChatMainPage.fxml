<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" styleClass="backgroundColor" stylesheets="@../../styles/chatmainpage.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox layoutX="14.0" layoutY="14.0" prefHeight="372.0" prefWidth="572.0">
         <children>
            <ScrollPane prefHeight="320.0" prefWidth="572.0">
               <content>
                  <TextArea fx:id="messageArea" editable="false" prefHeight="320.0" prefWidth="572.0" wrapText="true" />
               </content>
            </ScrollPane>
            <HBox spacing="10.0">
               <TextArea fx:id="inputField" prefHeight="50.0" prefWidth="490.0" promptText="Type your message here..." />
               <Button fx:id="sendButton" mnemonicParsing="false" prefHeight="50.0" prefWidth="70.0" text="Send" />
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
